<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.SelectCategoryFragment">

    <ImageView
        android:id="@+id/carnavalImage"
        
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"

        android:tooltipText="Festivaller"
        
        
        android:layout_width="0dp"
        android:layout_height="0dp"
        
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"
        
        android:src="@drawable/carnaval"
        
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        
        />

    <ImageView
        android:id="@+id/danceImage"
        
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Dans"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.5"
        
        android:src="@drawable/dancing"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/esportsImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="E-Spor"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.8"
        
        android:src="@drawable/esports"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/rockImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Rock"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.2"
        
        android:src="@drawable/rock"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/soccerImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Futbol"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        
        android:src="@drawable/soccer"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/theaterImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Tiyatro"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.8"
        
        android:src="@drawable/theater"
        
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/basketballImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Basketbol"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.2"

        android:src="@drawable/basketball"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/familyImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Aile"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"

        android:src="@drawable/family"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/foodImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:tooltipText="Yemek Festivali"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.15"

        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.8"

        android:src="@drawable/food"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>